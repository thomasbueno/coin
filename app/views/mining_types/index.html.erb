<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class:"btn-sm btn-info"%></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class:"btn-sm btn-warning" %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('links.confirm') }, class:"btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new.mining_type'), new_mining_type_path, class:"btn btn-primary" %>
<%= link_to t('links.back'), root_path, class:"btn btn-secondary" %>
